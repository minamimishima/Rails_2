<div class="container">
  <h2>登録済み一覧</h2>
  <table>
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.room_image? %>
            <%= image_tag room.room_image.url %>
          <% else %>
            <%= image_tag "/room_default.png" %>
        <% end %></td>
        <td><%= link_to room.room_name, room_path(room) %></td>
        <td><%= room.room_detail %></td>
        <td>¥<%= room.fee.to_s(:delimited) %></td>
        <td><%= room.room_name %></td>
        <td><%= l room.created_at %></td>
        <td><%= link_to "編集", edit_room_path(room) %></td>
        <td><%= link_to "削除", room_path(room), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
